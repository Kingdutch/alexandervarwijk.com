.info-banner {
  box-sizing:border-box;
  width:100%;
  display:flex;
  align-items:flex-start;
  gap:.75rem;
  padding:.75rem 1rem;
  border:1px solid #d7dde5;
  border-left:4px solid #3b82f6;
  border-radius:.5rem;
  background:#f7f9fc;
  color:#1f2937;
  font-size:14px;
  line-height:1.4;
  margin-bottom: 1rem;
}
